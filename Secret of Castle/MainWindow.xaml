<Window x:Name="Menu" x:Class="Secret_of_Castle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Secret_of_Castle"
        mc:Ignorable="d"
        Title="Secret of Castle" Height="{DynamicResource {x:Static SystemParameters.FullPrimaryScreenWidthKey}}" Width="{DynamicResource {x:Static SystemParameters.FullPrimaryScreenWidthKey}}"
        WindowState="Maximized" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode = "NoResize" Icon="/Icon.jpeg" >
    <Grid Cursor="">
        <Image x:Name="background" HorizontalAlignment="Left" Height="1645" VerticalAlignment="Center" Width="1668" Cursor="No" Source="/castle_1.jpeg" Stretch="UniformToFill" Margin="-9,0,0,0"/>
        <Button x:Name="Button_Play" Content="Играть" HorizontalAlignment="Left" Height="66" Margin="710,326,0,0" VerticalAlignment="Top" Width="217" MouseEnter="Button_Play_MouseEnter" MouseLeave="Button_Play_MouseLeave" Background="Transparent" Foreground="#FFFBFBFB" BorderBrush="{x:Null}" FontFamily="Arial" FontWeight="Bold" FontSize="36" Click="Button_Play_Click"/>
        <Button x:Name="Button_Exit" Content="Выход" HorizontalAlignment="Left" Height="96" Margin="716,412,0,0" VerticalAlignment="Top" Width="218" Background="Transparent" Foreground="#FFFBFBFB" BorderBrush="{x:Null}" FontFamily="Arial" FontWeight="Bold" FontSize="36" Click="Button_Exit_Click"/>
        <Grid HorizontalAlignment="Left" Height="1100" Margin="1779,224,0,0" VerticalAlignment="Top" Width="1776"/>
        <ComboBox HorizontalAlignment="Left" Height="146" Margin="659,-146,0,0" VerticalAlignment="Top" Width="2"/>
        <Grid/>
        <Frame x:Name = "MainMenu" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
