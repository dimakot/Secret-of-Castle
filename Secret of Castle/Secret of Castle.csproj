<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <RootNamespace>Secret_of_Castle</RootNamespace>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="castle_1.jpeg" />
    <None Remove="font\en.ttf" />
    <None Remove="font\Ru.otf" />
    <None Remove="Icon.jpeg" />
    <None Remove="Player.png" />
    <None Remove="Sound\Music\MainMenuTheme.wav" />
    <None Remove="Texture\Parallax\MainMenu.png" />
    <None Remove="Texture\Parallax\MainMenuBackground.png" />
    <None Remove="Texture\SplashScreen\SplashScreen.png" />
    <None Remove="Texture\UI\logo.png" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="castle_1.jpeg" />
    <Resource Include="font\en.ttf" />
    <Resource Include="font\Ru.otf">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Icon.jpeg" />
    <Resource Include="Player.png" />
    <Resource Include="Sound\Music\MainMenuTheme.wav" />
    <Resource Include="Texture\Parallax\MainMenu.png">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Texture\Parallax\MainMenuBackground.png">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Texture\UI\logo.png" />
  </ItemGroup>

  <ItemGroup>
    <SplashScreen Include="Texture\SplashScreen\SplashScreen.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </SplashScreen>
  </ItemGroup>

</Project>
