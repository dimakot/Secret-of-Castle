<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <RootNamespace>Secret_of_Castle</RootNamespace>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="castle_1.jpeg" />
    <None Remove="Icon.jpeg" />
    <None Remove="Player.png" />
    <None Remove="Texture\SplashScreen\SplashScreen.png" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="castle_1.jpeg" />
    <Resource Include="Icon.jpeg" />
    <Resource Include="Player.png" />
  </ItemGroup>

  <ItemGroup>
    <SplashScreen Include="Texture\SplashScreen\SplashScreen.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </SplashScreen>
  </ItemGroup>

  <ItemGroup>
    <None Update="Texture\Parallax\castle_1.jpeg">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
